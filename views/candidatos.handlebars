<div class="lista-candidatos">
    <h2>Lista de candidatos</h2>
    {{#if candidatos.length}}
    {{#each candidatos}}
    <div class="candidato">
        <div class="caja">
            <p class="etiqueta">Nombre:</p>
            <p class="nombre">{{nombre}}</p>
        </div>
        <div class="caja">
            <p class="etiqueta">Correo El√©ctronico:</p>
            <p class="nombre">{{email}}</p>
        </div>
        <div class="caja">
            {{#if cv}}
            <a href="/uploads/cv/{{cv}}" class="btn btn-verde"> Ver CV</a>
            {{else}}
                    <p class="nombre">No hay CV</p>
            {{/if}}
        </div>
    </div>
    {{/each}}
    {{else}}
    <p>No hay candidatos</p>
    {{/if}}
</div>