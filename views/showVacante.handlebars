<div class="contenido-superior vacante contenedor">
    <div class="caja">
        <p class="etiqueta">Empresa:</p>
        <p class="nombre">{{vacante.empresa}}</p>
    </div>
    <div class="caja">
        <p class="etiqueta">Ubicación:</p>
        <p class="nombre">{{vacante.ubicacion}}</p>
    </div>
    <div class="caja">
        <p class="etiqueta">Contrato:</p>
        <p class="nombre contrato">{{vacante.contrato}}</p>
    </div>
    <div class="caja">
        <p class="etiqueta">Salario:</p>
        <p class="nombre">$ {{vacante.salario}}</p>
    </div>
</div>

<div class="vacante-contenedor contenedor">
    <main class="contenido">
        <h2>Descripción del puesto</h2>
        <div class="vacante-descripcion">
            {{{vacante.descripcion}}}
        </div>
        <a href="/vacantes/editar/{{vacante.url}}" class="btn btn-azul editar-btn">Editar Vacante</a>
    </main>
    <aside class="sidebar">
        <h2>Conocimientos deseados</h2>
        <ul class="skills">
            {{#each vacante.skills}}
            <li>{{this}}</li>
            {{/each}}
        </ul>
    </aside>
</div>

<div class="contenedor datos-reclutador">
    <div class="enviar-datos">
        <h3>Contactar Reclutador</h3>
        <p>Llena el siguiente formulario, sube tu curriculum </p>
        <form action="/postularme/{{vacante.url}}" method="POST" enctype="multipart/form-data" class="default-form">
            <div class="campo">
                <label for="nombre">Nombre del postulante</label>
                <input type="text" id="nombre" name="nombre" placeholder="Ingresa tu Nombre" />
            </div>
            <div class="campo">
                <label for="email">E-Mail del postulante</label>
                <input type="email" id="email" name="email" placeholder="Ingresa tu E-Mail" />
            </div>
            <div class="campo">
                <label for="tel">Telefono del postulante</label>
                <input type="tel" id="tel" name="tel" placeholder="Ingresa tu Telefono" />
            </div>
            <div class="campo">
                <label for="file">Curriculum del Postulante</label>
                <input type="file" id="file" name="file" />
            </div>
            <div class="campo">
                <input type="submit" value="Postularme" class="btn btn-azul" />
            </div>
        </form>
    </div>
    <div class="info-reclutador">
        <h2>Información del Reclutador</h2>
        {{#if vacante.autor.nombre}}
        <p>{{vacante.autor.nombre}}</p>
        {{/if}}
        {{#if vacante.autor.email}}
        <p>{{vacante.autor.email}}</p>
        {{/if}}
        {{#if vacante.autor.email}}
        <img src="/uploads/perfiles/{{vacante.autor.imagen}}" alt="logo del reclutador" class="admin-perfil" />
        {{/if}}
    </div>
</div>